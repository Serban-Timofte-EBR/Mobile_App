<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f32"
    android:padding="16dp">

    <Spinner
        android:id="@+id/exam_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:entries="@array/main_spinner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/exam_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:drawableStart="@drawable/ic_menu_camera"
        android:drawablePadding="8dp"
        android:text="Course"
        app:layout_constraintTop_toBottomOf="@id/exam_spinner"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/exam_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:drawableStart="@drawable/ic_menu_camera"
        android:drawablePadding="8dp"
        android:text="Date"
        app:layout_constraintTop_toBottomOf="@id/exam_course"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/exam_classroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Classroom"
        app:layout_constraintTop_toBottomOf="@id/exam_date"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/exam_supervisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opt_supervisor"
        app:layout_constraintTop_toBottomOf="@id/exam_classroom"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>