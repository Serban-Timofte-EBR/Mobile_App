<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ViewPhoneFragment">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:id="@+id/timofte_serban_view_iv"

        android:src="@drawable/baseline_smartphone_24"

        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/timofte_serban_view_tv_brand"

        app:layout_constraintTop_toBottomOf="@id/timofte_serban_view_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Brand" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/timofte_serban_view_tv_mode"

        app:layout_constraintTop_toBottomOf="@id/timofte_serban_view_tv_brand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Model" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/timofte_serban_view_tv_baterie"

        app:layout_constraintTop_toBottomOf="@id/timofte_serban_view_tv_mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Baterie" />

</androidx.constraintlayout.widget.ConstraintLayout>