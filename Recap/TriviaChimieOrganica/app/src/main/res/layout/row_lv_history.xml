<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/HistoryRowContainer">

    <ImageView
        android:id="@+id/timofte_serban_row_iv_date"

        style="@style/RowImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/timofte_serban_row_tv_date"

        android:layout_margin="8dp"

        android:src="@drawable/baseline_access_time_24"/>

    <TextView
        android:id="@+id/timofte_serban_row_tv_date"

        style="@style/RowQuestionText"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/timofte_serban_row_iv_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_margin="8dp"

        android:text="Date"
        android:textAlignment="center"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/timofte_serban_row_iv_result"

        style="@style/RowImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/timofte_serban_row_iv_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/timofte_serban_row_tv_result"

        android:layout_margin="8dp"

        android:src="@drawable/baseline_scoreboard_24"/>

    <TextView
        android:id="@+id/timofte_serban_row_tv_result"

        style="@style/RowAnswerText"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/timofte_serban_row_iv_result"
        app:layout_constraintTop_toBottomOf="@id/timofte_serban_row_iv_date"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_margin="8dp"

        android:text="Result"
        android:textAlignment="center"
        android:textSize="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>